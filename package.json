{
  "name": "blockchain-indexer",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "indexer": "node src/indexer.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:indexer\"",
    "dev:server": "nodemon --watch src --ext js,json --exec node src/server.js",
    "dev:indexer": "nodemon --watch src --ext js,json --exec node src/indexer.js",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.cjs"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "ethers": "^6.12.0",
    "express": "^4.19.2",
    "mongoose": "^8.6.0",
    "morgan": "^1.10.1",
    "node-cron": "^3.0.3",
    "nodemon": "^3.1.10",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "pm2": "^5.4.2"
  }
}
